	<script type="text/javascript">
		function mostrar(){
			
			var tipodato = document.getElementById('tipodato').value;
			
			console.log("antonio tipodato "+tipodato);
			if (tipodato == "E"){
				document.getElementById('imgem').style.display = 'none';		
				document.getElementById('imgso').style.display = 'none';
			}
				
		}
		
